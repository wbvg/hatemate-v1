<div class="hero-unit">
<h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %><br />
  <%= f.email_field :email, placeholder: 'user@domain.com', :autofocus => true  %>

  <%= f.label :password %><br />
  <%= f.password_field :password, placeholder: 'Min 6 Characters'  %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :username %>
  <%= f.text_field :username %>
<br/>
  <%= f.file_field :avatar %>


  <%= f.label :status %>
  <%= f.select :status, options_for_select([[''],['Single'], ['In Relationship'],['On the Prowl'], ['Desperate'],['One eye open'],['Potetial cheater'],['Open to possibilities'],['Runaway Princess'], ['Heart Brokern'],['Playa'],['In Happy Relationship']]), :include_blank => false %>

    <%= f.label :age %>
    <%= f.text_field :age %>

  <%= f.label :gender %>
  <%= f.select :gender, options_for_select([[''],['Female'], ['Male']]), :include_blank => false %>

  <%= f.label :location %>
  <%= f.text_field :location %>

<h4>Tell us about yourself</h4>
<%= f.text_area :intro,  :rows=>5 %><br/>
 <%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
<% end %>

<%= render "devise/shared/links" %>
</div>






