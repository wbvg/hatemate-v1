<div class="hero-unit">
<h1>Hates</h1>

<% @hates.each do |hate| %>
    <ul>
      <li>

        <%= link_to(hate.users.first.username, hate.users.first ) %></li>
      <li><%= image_tag(hate.users.first.avatar)  %></li>
      <li><%= hate.category %></li>
      <li><%= hate.post %></li>
      <li><%= hate.hate_rate %></li>
    </ul>
<% end %>




</div>